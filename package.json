{
  "name": "react-resize-observer",
  "version": "0.2.0",
  "author": "Izaak Schroeder <izaak.schroeder@gmail.com>",
  "contributors": [
    "Neal Granger <neal@nealg.com>"
  ],
  "keywords": [
    "react",
    "resize"
  ],
  "main": "lib/ResizeObserver.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "./node_modules/.bin/rimraf lib",
    "build": "./node_modules/.bin/babel --copy-files -s -d lib src",
    "copy": "./node_modules/.bin/ncp src lib && ./node_modules/.bin/renamer --regex --find '$' --replace '.flow' 'lib/**/*.js'",
    "prepublish": "npm run clean && npm run copy && npm run build",
    "test": "npm run lint && npm run flow",
    "flow": "./node_modules/.bin/flow .",
    "lint": "./node_modules/.bin/eslint ."
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.5.0",
    "eslint-config-metalab": "^7.0.1",
    "flow-bin": "^0.53.1",
    "ncp": "^2.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "renamer": "^0.6.1",
    "rimraf": "^2.6.1"
  },
  "peerDependencies": {
    "react": ">=0.14",
    "react-dom": ">=0.14"
  },
  "devEngines": {
    "node": "8",
    "npm": "5"
  }
}
